anjuta_devel_CONTENTS='usr/include/ usr/lib/libanjuta* usr/lib/pkgconfig/ usr/share/gtk-doc/'

DEPS_PATH="/usr/lib/anjuta"
DIFF_EXCLUDES="libanjuta.types"
