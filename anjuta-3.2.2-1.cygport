inherit gnome2

DESCRIPTION="GNOME C/C++ IDE"
HOMEPAGE="http://www.anjuta.org/"

PATCH_URI="
	3.0-glade-plugin.patch
	3.2-tests-build.patch
"

PKG_NAMES="${PN} ${PN}-devel"
anjuta_CONTENTS="--exclude=gtk-doc etc/ usr/bin/ usr/lib/anjuta/ usr/lib/gir*
